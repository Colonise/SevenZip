{
    "compilerOptions": {
        "alwaysStrict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "outDir": "dist",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strict": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "declaration": true,
        "strictPropertyInitialization": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["es5", "es2015.promise"]
    },
    "include": ["gulpfile.ts"]
}
